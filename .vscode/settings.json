{
  // 控制相关文件嵌套展示
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.expand": false,
  "explorer.fileNesting.patterns": {
    "*.ts": "$(capture).test.ts,$(capture).test-d.ts",
    "*.tsx": "$(capture).test.ts,$(capture).test-d.ts",
    "*.env": "$(capture).env.*",
    "CHANGELOG.md": "CHANGELOG*",
    "package.json": "pnpm-lock.yaml,pnpm-workspace.yaml,LICENSE,.gitattributes,.gitignore,.gitpod.yml,CNAME,.npmrc,.npmignore,.browserslistrc,.release-it.*",
    "eslint.config.mjs": ".eslint*,.prettier*,.stylelint*,commitlint*,.cz-config.*,",
    "tsconfig.json": "tsconfig.*.json",
    "README.md": "README*,CHANGELOG.md"
  }
}
